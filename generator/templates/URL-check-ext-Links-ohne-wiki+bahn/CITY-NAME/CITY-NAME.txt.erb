<%=
  
  #coding: ISO-8859-1
  @counter = 0
  
  
  
  def generate_external_links(pano)
    result = ""
    pano.external_links.each do |link|
    urlname=(link.url.split("/")[2])
     unless (urlname.split(".")[1]) == "wikipedia" or
     unless (urlname.split(".")[1]) == "bahn"
      result +="link" + @counter.to_s + "=" + link.path + "," + link.url + " in _blank," + link.name +
          " - Info Link (" + (link.url.split("/")[2]) + ")\n" 
      @counter += 1
    end 
    end 
    end 
    result
  end
  

  result = ""
  @city.panoramas.each do |pano|
    panoname = FileHelper.to_filename pano.name
    
    result += "[" + panoname + "i]\n"
    @counter = 0
    result += generate_external_links(pano) + "\n"
    
  end
  result
%>