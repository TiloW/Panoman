<% # coding: utf-8 
%>

<% unless @city.new_record? %>
  <a href="<%= city_path(@city) %>">Panoramen</a>
<% end %>
<h1>Bearbeiten: <%= @city.name %></h1>

<div id="sections">
  <ul>
    <li><a href="#tab-fields">Datensatz</a></li>
  </ul>
  
  <div id="tab-fields" class="section">
    <%= form_for(@city) do |f| %>
      <div class="field">
        <%= f.label :name, "Name"  %>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :en_name, "Englischer Name" %>
        <%= f.text_field :en_name %>
      </div>
      <div class="field">
        <%= f.label :map_id, "G-Map City-ID" %>
        <%= f.text_field :map_id %>
      </div>
      <div class="actions">
        <%= f.submit "Speichern" %>
      </div>
      <div class="field">
        <%= f.label :html_content, "ZusÃ¤tliches HTML"  %>
        <%= f.text_area :html_content, :cols => 75 %>
      </div>
    <% end %>
  </div>

</div>
